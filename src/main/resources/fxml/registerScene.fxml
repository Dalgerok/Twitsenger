<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="800.0"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.org.Client.RegisterSceneController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Label text="Create a new account">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="firstNameField" promptText="First name" />
            <TextField fx:id="secondNameField" promptText="Second name" />
            <TextField fx:id="registerEmail" promptText="Email address" />
            <PasswordField fx:id="registerPassword" promptText="Password" />
            <TextField fx:id="registerPassword2" promptText="Re-enter password" />
            <DatePicker fx:id="birthadayField" promptText="Birthday" />
            <HBox spacing="50.0">
               <children>
                  <RadioButton fx:id="maleButton" mnemonicParsing="false" text="Male">
                     <toggleGroup>
                        <ToggleGroup fx:id="GroupGender" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="femaleButton" mnemonicParsing="false" text="Female" toggleGroup="$GroupGender" />
               </children>
            </HBox>
            <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#signUpHandler" text="Sign up" />
         </children>
      </VBox>
   </children>
</FlowPane>
